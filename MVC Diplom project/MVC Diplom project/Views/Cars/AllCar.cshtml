@using MVC_Diplom_project.Data.Models
@model IEnumerable<Car>

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <form method="post"  asp-controller="Cars" asp-action="AddCar">
        <label>Brand</label>
        <input type="text" name="carBrand"/>
        <label>Model</label>
        <input type="text" name="model"/>
        <label>Fuel</label>
        <input type="text" name="fuel"/>
        <input type="submit"  title="Add Cars"/>

    </form> 
   @foreach (var car in Model)
   { 
    <div>
        <div>Brand @car.carBrand  </div>
        <div>Model @car.model  </div>
        <div>Fuel @car.fuel  </div>
        @*<div>Logbook @car.logbooks  </div>*@
    </div>
   }

</body>
</html>
