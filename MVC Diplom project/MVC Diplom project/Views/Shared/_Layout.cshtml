<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>


<body>
    <style>
        body {
            background-color: #a598a8;
        }
    </style>


    <header class="p-3 text-bg-dark">

        <div class="container">

            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <img src="/img/logo.png" />

                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">

                    <li><a href="/Home/Index" class="nav-link px-2 text-white"> <img src="/img/homepage.png" /></a></li>
                    <li><a href="/Cars/AddCarView" class="nav-link px-2 text-white"> <img src="/img/add.png" /></a></li>
                    <li><a href="/Cars/AllCar" class="nav-link px-2 text-white"> <img src="/img/listcar.png" /></a></li>


                </ul>

                <div class="text-end">
                    <a href="/Account/Register" class="nav-link px-2 text-secondary"> <img src="/img/reg.png" /></a>
                    <a href="/Account/Login" class="nav-link px-2 text-secondary"> <img src="/img/log.png" /></a>
                </div>
            </div>
        </div>
    </header>


    <div class="container mt-5">
        @RenderBody()
    </div>
</body>
</html>
